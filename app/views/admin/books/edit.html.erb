<h1>图书修改</h1>
<%= form_for [:admin, @book] do |f| %>
  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :text %>
    <%= f.text_area :text %>
  </p>

  <p>
    <%= f.label "库存" %>
    <%= f.number_field :book_stock %>
  </p>

  <p>
    <%= f.label "状态" %> </br>
    <%= f.select 'book_state', options_for_select(['上架', '下架']) %>
  </p>

  <p>
    <%= f.submit "提交"%>
  </p>
<% end %>
